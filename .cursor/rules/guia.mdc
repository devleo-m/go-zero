func (rl *RateLimiter) Allow(ctx context.Context, key string, limit int, window time.Duration) (bool, error) {
    count, err := rl.redis.Incr(ctx, key).Result()
    if err != nil {
        return false, err
    }
    
    if count == 1 {
        rl.redis.Expire(ctx, key, window)
    }
    
    return count <= int64(limit), nil
}
